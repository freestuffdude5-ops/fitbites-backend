# FitBites Production Environment Variables
# Copy to .env and fill in real values

# Database (PostgreSQL for production)
DATABASE_URL=postgresql+asyncpg://fitbites:CHANGE_ME@db:5432/fitbites
POSTGRES_PASSWORD=CHANGE_ME

# Auth (REQUIRED â€” generate a strong random secret)
JWT_SECRET=CHANGE_ME_TO_RANDOM_64_CHAR_STRING

# CORS (restrict to your domains in production)
CORS_ORIGINS=https://fitbites.app,https://www.fitbites.app

# API base URL (for affiliate redirect links)
API_BASE_URL=https://api.fitbites.app

# Scraper API keys
YOUTUBE_API_KEY=
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
ANTHROPIC_API_KEY=

# Stripe (subscription billing)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Apple IAP
APPLE_SHARED_SECRET=

# Affiliate link signing (generate random 64-char string for production)
AFFILIATE_SIGNING_KEY=

# Scraper config
SCRAPE_INTERVAL_HOURS=6
RECIPES_PER_PLATFORM=20

# Logging
LOG_FORMAT=json
LOG_LEVEL=INFO
